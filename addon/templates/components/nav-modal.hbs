{{#if activeCategory}}
  {{#liquid-unless showActions class='actionSlide'}}
    {{#each columns as |column|}}
      <div class='nav-column'>
        {{#each column as |_section index|}}
          {{#if _section.isVisible}}
            {{nav-section
              section=_section
              showMore=(action 'showMore')
              hook=(concat hook '-section-' index)
            }}
          {{/if}}
        {{/each}}
      </div>
    {{/each}}
  {{else}}
    {{nav-section-actions
      section=content
      goBack=(action 'goBack')
      hook=(concat hook '-section-actions')
    }}
  {{/liquid-unless}}
{{/if}}
